<section class="container pt-5">
    <div class="row mb-4 mx-5 mt-5">
        <div class="col-6 px-0">
            <%# 画像表示 %>
            <% if @user.picture? %>
                <%= image_tag @user.picture.url, class: "profile-pic w-100" %>
            <% else %>
                <%= image_tag gravatar_for(@user), class: "profile-pic w-100" %>
            <% end %>
        </div>
        <div class="col-6 bg-light text-center">
            <br>
            <%# name %>
            <h1 class="display-4 mt-3"><%= @user.name %></h1>
            <%# uni and year %>
            <p class=""><span><%= @user.uni %></span>
                <% if @user.year? %>
                    <span><%= @user.year %>歳</span>
                <% end %>
            </p>
            <% if @user.description? %>
                <p class="text-center orange px-5 pb-5 pt-3"><%= @user.description %></p><br>
            <% else %>
                <h5 class="text-center orange p-5">情報がありません。</h5>
            <% end %>
            <% if logged_in? %>
                <% if current_user.id == @user.id %>
                    <%# edit botton %>
                    <%= link_to "編集", edit_user_path, class: "btn btn-outline-dark bg-color py-0 text-center prof-button" %>
                <% end %>
            <% end %>
        </div>
    </div>
</section>
