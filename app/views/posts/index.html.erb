<section class="admin-home container text-center pt-5">
    <h1 class="mb-5 pt-5 title text-white">BOFBOF 投稿一覧</h1>
    <div class="mt-3">
        <div class="pl-5">
            <%= image_tag "people.png", class:"w-100" %><br>
        </div>
        
        <div class="content text-center font-weight-bold">
            <p  class="mt-3 section-title description-font mb-5 pb-5">
                BOFBOFは全国の大学生によって企画運営される学生団体。<br>
                メンバーについて知って、<br>
                あなたもBOFBOFの一員になろう！！
            </p>
        </div>
        <div class="row mx-5 text-black">
            <% @posts.each do |post| %>
                <div class="fx1 mb-5">
                    <div class="checkedexample">
                        <label for="labeltest">
                            <span class="fx2"><%= post.title%></span>
                        </label>
                        <input type="checkbox" id="labeltest"/>
                        <div class="appear row">
                            <div class="col-6">
                                <p>
                                    <% @dtopics = Dtopic.where(is_chosen: true, post_id: post.id) %>
                                    <%# Dtopicの集まりの中のis_chosenがtrueのやつを探し、post_idってやつがループのがかのidを使えと言ってるやつを@dtopicsという変数に代入 %>
                                    <% @dtopics.each do |dtopic| %>
                                    <%# @dtopicsという変数を使ってループ %>
                                        <%= dtopic.content %><br>
                                    <% end %>
                                </p>
                            </div>
                            <div class="col-6">
                                <p>
                                    <% @itopics = Itopic.where(is_chosen: true, post_id: post.id) %>
                                    <% @itopics.each do |itopic| %>
                                        <%= itopic.content %><br>
                                    <% end %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-6 mx-auto px-auto mt-5">
            <div class="put-center"><%= will_paginate @posts %></div>
        </div>
    </div>
</section>

