                            <% end %>   
                        </div> 
                        <span>Discord</span>
                    </div><br>
                    <div class="sns_button b3">  
                        <div class="icon">
                            <%= link_to "https://www.youtube.com/channel/UCSmbxJi_wgyFNr2X4Z5YIcw", target: :_blank, class: "text-dark" do %>
                                <i class="fab fa-youtube"></i>    
                            <% end %>  
                        </div>
                        <span>YouTube</span>
                    </div><br>
                    <div class="sns_button b4">
                        <div class="icon">
                            <%= link_to "https://twitter.com/bofbofnet", target: :_blank, class: "text-dark" do %>
                                <i class="fab fa-twitter"></i>    
                            <% end %>   
                        </div>
                        <span>Twitter</span>
                    </div>
                </div> 
            </div>
        </div>
        <div class="menu-wrap">
            <input type="checkbox" class="toggler">
