<section class="mx-4 fixed-top">
        <div class="row mt-4">
            <div class="col-2 logo-section">
                <%= link_to root_path do %>
                    <%= image_tag "BOFBOF_LOGO.png", class:"w-75 logo" %>
                <% end %>
            </div>
        </div>
        <div class="ml-0 sns-section">
                <div class="sns_wapper">
                    <div class="sns_button b1">
                        <div class="icon">
                            <%= link_to "https://www.instagram.com/bofbof_net/?hl=en", target: :_blank, class: "text-dark" do %>
                                <i class="fab fa-instagram"></i>   
                            <% end %>   
                        </div>
                        <span>Instagram</span>
                    </div><br>
                    <div class="sns_button b2">
                        <div class="icon">
                            <%= link_to "https://discord.gg/5N5HpEDr", target: :_blank, class: "text-dark" do %>
