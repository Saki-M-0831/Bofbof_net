<section class="admin-home container text-center pt-5">
    <h1 class="mb-5 pt-5 title">管理メンバー<br>ホーム</h1>
    <div class="px-5 mt-5">
        <div class="row mb-4">
            <div class="col-4">
                <%= link_to admin_users_index_path, class: "text-dark link" do %>
                    <div class="card card-body shadow hover">
                        <h3>メンバーリスト</h3>
                        <i class="fas fa-users-cog fa-5x"></i>
                    </div>
                <% end %>
            </div>
            <div class="col-4">
                <%= link_to admin_posts_path, class: "text-dark link" do %>
                    <div class="card card-body shadow hover">
                        <h3>投稿作成・編集</h3>
                        <i class="fas fa-newspaper fa-5x"></i>
                    </div>
                <% end %>
            </div>
            <div class="col-4">
                <%= link_to admin_videos_path, class: "text-dark link" do %>
                    <div class="card card-body shadow hover">
                        <h3>動画掲示板</h3>
                        <i class="fas fa-file-video fa-5x"></i>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-4 ml-auto">
                <%= link_to admin_users_index_path, class: "text-dark link" do %>
                    <div class="card card-body shadow hover">
                        <h3>説明会投稿</h3>
                        <i class="fas fa-chalkboard-teacher fa-5x"></i>
                    </div>
                <% end %>
            </div>
            <div class="col-4 mr-auto mb-5">
                <%= link_to admin_notices_path, class: "text-dark link" do %>
                    <div class="card card-body shadow hover">
                        <h3>お知らせ管理</h3>
                        <i class="fas fa-info-circle fa-5x"></i>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
