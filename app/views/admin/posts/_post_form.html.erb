<%= form_for([:admin, @post]) do |f| %>
    <div class="row mx-5">
        <div class="col-6 my-auto">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, placeholder: "例: 1月1日のニュース", class: "form-control", required: true %>
        </div>
        <div class="col-6 my-auto">
            <%= f.label :description, "概要・メモ" %>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= f.submit "保存する", class: "btn btn-outline-dark bg-color put-center mt-4" %>
    </div>
<% end %>
