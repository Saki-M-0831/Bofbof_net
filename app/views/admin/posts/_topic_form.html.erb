<div class="row mx-5 mt-4">
    <div class="col-12 col-md-3 my-auto">
        <div class="division-pic shadow" id="dtopic"><h2><i class="fas fa-mountain"></i>国内</h2></div>
    </div>
    <div class="col-12 col-md-7 my-auto">
        <% @d_topics.each do |d| %>
            <div class="row py-3">
                <div class="col-12 col-md-10 my-auto text-left">
                    <%= d.content %>
                    <% if d.is_chosen == false || d.is_chosen.nil? %>
                        <%= link_to d_choose_admin_post_dtopic_path(dtopic_id: d.id, post_id: @post.id), method: :patch do %>
                            <span class="text-muted"><i class="fas fa-check"></i></span>
                        <% end %>
                    <% else %>
                        <%= link_to d_omit_admin_post_dtopic_path(dtopic_id: d.id, post_id: @post.id), method: :patch do %>
                            <span class="text-success"><i class="fas fa-check"></i></span>
                        <% end %>
                    <% end %>
                    <%= link_to admin_post_dtopic_path(dtopic_id: d.id, post_id: @post.id), method: :delete do %>
                        <span class="text-muted"><i class="far fa-trash-alt"></i></span>
                    <% end %>
                </div>
            </div>
        <% end %>
        <%= form_for([:admin, @post, @d_topic]) do |f| %>
            <div class="row">
                <div class="col-12 col-md-10 my-auto">
                    <%= f.text_field :content, placeholder:"国内ニュースを書き込む", class: "form-control", required: true %>
                </div>
                <div class="col-12 col-md-2 my-auto pl-0">
                    <%= f.submit "追加する", class: "btn btn-outline-dark" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
